{
  "name": "@gendosu/claude-code-automation",
  "version": "1.0.0",
  "description": "GitHub Issue automation script for claude-code-automation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-code-automation": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CLAUDE.md"
  ],
  "preferGlobal": true,
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "ts-node-esm src/index.ts",
    "clean": "rimraf dist",
    "run:automation": "npm run build && npm run start",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["github", "automation", "issues", "typescript"],
  "author": "claude-code-automation Team",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gendosu/claude-code-automation.git"
  }
}